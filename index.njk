{# TILED TEXT DISPLAY #}
<div id="display-container__id" tabindex="0">
  <header id="display-container-header__id">
    <h1>
      <a href="/">ðŸ”³</a>
      <h1>text-tiler</h1>
    </h1>
    <div id="display-btns__id">
      <button id="back-btn__id"></button>
      <button id="view-btn__id"></button>
      <div id="formatting-btns__id">
        <div class="format-btns-wrapper__class">
          <label>Font size: </label>
          <button aria-label="increase font size" id="btn-font-size-inc__id" class="btn-format__class">+</button>
          <button aria-label="decrease font size" id="btn-font-size-dec__id" class="btn-format__class">-</button>
        </div>
        <div class="format-btns-wrapper__class">
          <label>Column width:</label>
          <button aria-label="increase colwidth" id="btn-w-cols-inc__id" class="btn-format__class">+</button>
          <button aria-label="decrease colwidth" id="btn-w-cols-dec__id" class="btn-format__class">-</button>
        </div>
        <div class="format-btns-wrapper__class">
          <label>Col min width: </label >
          <button aria-label="increase col min width" id="btn-minw-cols-inc__id" class="btn-format__class">+</button>
          <button aria-label="decrease col min width" id="btn-minw-cols-dec__id" class="btn-format__class">-</button>
        </div>
